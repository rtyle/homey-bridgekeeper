{
  "id": "com.github.rtyle.bridgekeeper",
  "version": "0.0.0",
  "compatibility": ">=12.5.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Bridgekeeper"
  },
  "description": {
    "en": "Virtual devices to support policies for traffic over a bridge to a peer"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "brandColor": "#3d2f80",
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Ross Tyler",
    "email": "rossetyler@gmail.com"
  },
  "settings": [
    {
      "id": "logger_level_threshold",
      "type": "dropdown",
      "title": "Logger Level Threshold",
      "value": "4", 
      "values": [
        { "id": "1", "title": "Error" },
        { "id": "2", "title": "Warning" },
        { "id": "3", "title": "Info" },
        { "id": "4", "title": "Debug" },
        { "id": "5", "title": "Verbose" }
      ]
    }
  ]
}
